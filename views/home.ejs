     <!-- Pico.css -->
    <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css">
    <style>
      /* Global CSS variables */
      :root {
        --spacing: 3rem;
        --text-weight: 400;
        --titles-weight: 800;
        --block-round: 0;
      }

      /* Typography */
      h2, h3, hgroup>:last-child {
        font-weight: 200;
      }
      small {
        color: var(--muted-text);
      }

      /* Header */
      .hero {
        background-color: #394046;
        background-image: url("https://source.unsplash.com/wWQ760meyWI/3000x1000");
        background-position: center;
        background-size: cover;
      }
      header {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: var(--spacing) 0;
      }
      header hgroup>:last-child {
        color: var(--h3);
      }
      header hgroup {
        margin-bottom: var(--spacing);
      }

      /* Main */
      main .grid > * {
        margin-bottom: var(--spacing);
      }
      @media (min-width: 992px) {
        main .grid {
          grid-column-gap: var(--spacing);
          grid-template-columns: auto 25%;
        }
      }
      form.grid {
        grid-row-gap: 0;
      }

      /* Aside nav */
      aside img {
        margin-bottom: .25rem;
      }
      aside p {
        margin-bottom: var(--spacing);
        line-height: 1.25;
      }
      
      
      :root:not([data-theme=dark]), [data-theme=light] {
          --nav-background: rgba(255, 255, 255, 0.7);
          --nav-border: rgba(115, 130, 140, 0.2);
      }

      [data-theme=dark] {
          --nav-background: rgba(16, 24, 30, 0.8);
          --nav-border: rgba(115, 130, 140, 0.2);
      }

      body > nav {
          z-index: 99;
          position: fixed;
          top: 0;
          right: 0;
          left: 0;
          backdrop-filter: saturate(180%) blur(20px);
          background-color: var(--nav-background);
          box-shadow: 0px 1px 0 var(--nav-border);
      }
      
      .hero,
      body>main {
          padding-top: 100px;
          x-padding-top: calc(1rem * var(--spacing-factor-xs) + 3.5rem);
      }

      @media (min-width: 576px) {
        .hero,
        body > main {
          padding-top: 100px;
          x-padding-top: calc(1rem * var(--spacing-factor-sm) + 3.5rem);
        }
      }

      @media (min-width: 768px) {
        .hero,
        body > main {
          padding-top: 100px;
          x-padding-top: calc(1rem * var(--spacing-factor-md) + 3.5rem);
        }
      }

      @media (min-width: 992px) {
        .hero,
        body > main {
          padding-top: 100px;
          x-padding-top: calc(1rem * var(--spacing-factor-lg) + 3.5rem);
        }
      }
    </style>
  </head>

